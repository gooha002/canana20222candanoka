        <!--  -->
        <div class="hetod">
            <img src="./img/hed.JPG" alt="">
        </div>
    </div>

    <div class="section">
        <div class="lefit">
            <div class="inleft1">
                <img src="./img/payshipimg.JPG" alt="">

            </div>
            <div>
                <form method="post" id="pg2">
                    <p>Card number</p>
                    <input type="tel" name="" id="numcc" required maxlength="19">

                    <p>Name on card</p>
                    <input type="text" name="" id="num" required>

                    <div class="exp">
                        <div  class="mm">
                            <p>Expiry date [MM/YY]</p>
                            <input type="tel" name="" id="numdd" required maxlength="8">
                        </div>

                        <div>
                            <p>CVV Code</p>
                            <input type="tel" name="" id="numvv" required>
                        </div>
                    </div>

                    <p class="con1">Country</p>
                    <input  disabled type="" name="" id="" placeholder="Canada">

                    <p>Address</p>
                    <input type="text" name="" id="numadr" required>

                    <p>City</p>
                    <input type="text" name="" id="numcit" required>

                    <div class="exp">
                        <div  class="mm">
                            <p>Province</p>
                            <input type="text" name="" id="numreg" required>
                        </div>

                        <div>
                            <p>Postal code</p>
                            <input type="text" name="" id="numpos" required>
                        </div>
                    </div>

                    <button type="submit">Pay</button>
                </form>
            </div>
        </div>
            <!--  -->
        <div class="righit">
            <div class="inright1">
                <img class="tel1" src="./img/yourocar1.JPG" alt="">
